<!-- editCategories.js -->

<main class="container mt-5">
  <h1 class="mb-4">Edit</h1>
  <form class="update-category-form" class="mb-3">
    <div class="mb-3">
      <label for="name-update-category" class="form-label">Name</label>
      <input type="text" class="form-control" id="name-update-category" placeholder="Enter category name"
        value="{{name}}" />
    </div>
    <button type="submit" id="update-category" class="btn btn-primary">Save</button>
    <button type="button" id="delete-category" class="btn btn-danger">Delete</button>
  </form>
</main>

<!-- also handles deletion -->